
<style>
  .ting {
      font-family: Montserrat;
      font-weight: 400;
      font-size: 14px;
      line-height: 19.6px;
  }

  .bg-white{
      background-color: transparent !important;
      border-radius: 19px;
      background: linear-gradient(152.97deg, rgba(150, 150, 255, 0.2) 0%, rgba(150, 255, 255, 0) 100%);
  }

  body {
      background-image: url(<%= asset_path 'background.jpg' %>);
      background-repeat: no-repeat;
      /*background-attachment: fixed;*/
      background-size: 100% 100%;
      height: 100vh;
  }

  /*.rec > div {*/
  /*    justify-content: left;*/
  /*}*/

  .btn-primary {
    height: auto;
    width: auto;
    -webkit-text-stroke-width: thin;
    text-align: center;
  }

  input {
      border: 1px solid #D1D1D1;
      border-radius: 6px;
      box-sizing: border-box;
      line-height: 2.5rem;
  }

  .bar > div {
      border-radius: 17px;
      padding: 3rem;
      backdrop-filter: blur(20px);
      color: #ffffff;
      background: linear-gradient(152.97deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
  }
</style>

<div>
  <div style="margin-right: 32rem; margin-left: 32rem; padding-top: 4rem">
    <div class="bar">
      <div class>
        <h2 style="font-family: Poppins">Login</h2>
      <%= render 'layouts/pop_ups', style:'text-align:center' %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div style="padding-top: 2rem">
            <div class="field">
              <small class='ting'>
                <%= f.label :email %><br />
              </small>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field" style="padding-top: 20px">
              <small class="ting">
                <%= f.label :password %><br />
              </small>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>

          <div style="padding-top: 2rem; padding-bottom: 2rem;">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:'form-check-input', style:'background-color:transparent; border-color:#ffffff; margin-right:7px;' %>
                <small class="ting"><%= f.label :remember_me %></small>
              </div>
            <% end %>
          </div>

          <div class="actions rec" style="padding-top: 20px">
            <div style="width: 50%">
              <%= f.submit "Login", class:'btn btn-primary' %>
            </div>
          </div>
        <% end %>

        <small>
          <%= render "devise/shared/links" %>
        </small>
      </div>
    </div>
  </div>
</div>



