
<style>
  .ting {
      font-family: Montserrat;
      font-weight: 400;
      font-size: 14px;
      line-height: 19.6px;
  }

  .bg-white{
      background-color: transparent !important;
      border-radius: 19px;
      background: linear-gradient(152.97deg, rgba(150, 150, 255, 0.2) 0%, rgba(150, 255, 255, 0) 100%);
  }

  body {
      background-image: url(<%= asset_path 'background.jpg' %>);
      background-repeat: no-repeat;
      /*background-attachment: fixed;*/
      background-size: 100% 100%;
      height: 100vh;
  }

  input {
      border: 1px solid #D1D1D1;
      border-radius: 6px;
      box-sizing: border-box;
  }
</style>

<div class="container-fluid">
  <div class="justify-content-center" style="margin-top: 0.5rem;margin-right: 10rem;">

    <div style="margin-left: 12rem; padding-top: 3rem; padding-bottom: 5rem;">
      <div class="container" style="border-radius: 17px; padding-left: 18rem; backdrop-filter: blur(20px); color: #ffffff;background: linear-gradient(152.97deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);">
        <div style="padding-top: 30px">
          <h2 style="font-size: large">Create account</h2>
          <p class="ting" style="font-size: smaller">For professionals, learn professionals.</p><br>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

        <div class="d-flex">
          <div class="field rec">
            <small class="ting">
              <%= f.label :first_name, as: 'First Name'%>
            </small><br>
            <%= f.text_field :first_name %>
          </div>

          <div style="margin-left: 2rem">
              <div class="field rec">
                <small class="ting">
                  <%= f.label :last_name, as: 'Last Name' %>
                </small><br>
                <%= f.text_field :last_name %>
              </div>
          </div>
        </div>

        <div class="d-flex" style="padding-top: 20px">
          <div class="field rec">
              <div class="field rec">
                <small class="ting">
                  <%= f.label :phone, as: 'Phone Number' %>
                </small><br>
                <%= f.phone_field :phone %>
              </div>
          </div>

          <div style="margin-left: 2rem">
            <small class="ting">
              <%= f.label :email %>
            </small><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="d-flex" style="padding-top: 20px">
          <div class="field rec">
            <small class="ting">
              <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            </small>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div style="margin-left: 2rem">
              <div class="field rec">
                <small class="ting">
                  <%= f.label :password_confirmation, as: 'Confirm password' %>
                </small><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
          </div>
        </div>

          <div style="padding-top: 15px">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:'form-check-input', style:'background-color:transparent; border-color:#ffffff; margin-right:7px;' %>
                <small class="ting"><%= f.label :remember_me %></small>
              </div>
            <% end %>

            <div class="field">
              <%= f.check_box :remember_me, class:'form-check-input', style:'background-color:transparent; border-color:#ffffff; margin-right:7px;' %>
              <small class="ting" >I agree to all the <a href="#" style="color: dodgerblue">Terms</a> and <a href="#" style="color: dodgerblue">Privacy policy</a> </small>
            </div>
          </div>

          <div class="actions rec" style="padding-top: 20px">
            <div style="width: 20%">
              <%= f.submit "Sign Up!", class:'btn btn-primary' %>
            </div>
          </div>
        <% end %>

        <div style="padding-top: 6px; padding-bottom: 1.45rem">
          <small class="ting">Already have an account? <%= render "devise/shared/links" %></small>
        </div>
      </div>
    </div>
  </div>
</div>
